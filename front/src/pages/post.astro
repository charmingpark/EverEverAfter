---
import PencilSquare from "../components/icons/PencilSquareIcon.astro";
import Layout from "../layouts/Layout.astro";
import PhoneLayout from "../layouts/PhoneLayout.astro";
import PostPage from "../post/PostPage";
---

<Layout title="차밍의 백년가약">
	<PhoneLayout>
		<span slot="title" class="text-xl">방명록</span>
		<label for="my-modal-6" class="btn btn-primary modal-button">공유</label>
		<PostPage client:load />
		<button class="btn btn-circle btn-primary absolute right-4 bottom-4" aria-label="방명록 쓰기">
			<PencilSquare />	
		</button>
	</PhoneLayout>
	<input type="checkbox" id="my-modal-6" class="modal-toggle" />
	<div class="modal modal-bottom">
		<div class="modal-box max-w-lg">
			<h3 class="font-bold text-lg">Congratulations random Internet user!</h3>
			<p class="py-4">You've been selected for a chance to get one year of subscription to use Wikipedia for free!</p>
			<div class="modal-action">
				<label for="my-modal-6" class="btn">Yay!</label>
			</div>
		</div>
	</div>
</Layout>
